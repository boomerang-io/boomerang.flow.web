{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./src",
    "paths": {
      "ApiServer": ["ApiServer/*"],
      "Assets/*": ["Assets/*"],
      "Components/*": ["Components/*"],
      "Config/*": ["Config/*"],
      "Constants/*": ["Constants/*"],
      "Features/*": ["Features/*"],
      "Hooks/*": ["Hooks/*"],
      "State/*": ["State/*"],
      "Styles/*": ["Styles/*"],
      "Utils/*": ["utils/*"]
    }
  },
  "exclude": ["dist", "node_modules", "public", "server"]
}
